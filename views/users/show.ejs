<!DOCTYPE html>
<html>

    <!-- head -->
    <%- include( '../partials/head/_head.ejs' , { page: 'Post' } ) %>


<body>
    <!-- Navbar Partial -->
    <%- include('../partials/navbar/_navbar', { routes } ) %>

        <!-- Page Content-->
        
        <div class="container px-4 px-lg-5">
            <!-- Heading Row-->
            <div class="row gx-4 gx-lg-5 align-items-center my-5">
                <div class="col-lg-7"><img class="img-fluid rounded mb-4 mb-lg-0" src="<%= user.avatar %>" alt="..." /></div>
                <div class="col-lg-5">
                    <h1 class="font-weight-light"><%= user.fullName %> </h1>
                    <p>@<%= user.username %></p>
                </div>
            </div>
            <!-- Call to Action-->
    <% post.forEach(post => { %>
            <!-- Content Row-->
            <div class="row gx-4 gx-lg-5">
                <div class="col-md-4 mb-5">
                    <div class="card h-100">
                        <div class="card-body">
                            <h2 class="card-title"><%= post.caption %></h2>
                            <img class="user_show_post_image" src="<%= post.image %>" alt="">
                            <% if (user == post._id) { %>
                                <form method='POST' action="/users/<%= post._id%>/togglePin">
                                    <input type='submit' value='Toggle Pin'>
                                </form>
                            <% } else { %>
                
                            <% } %>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    <% }) %>
        <!-- Footer-->
        <footer class="py-5 bg-dark">
            <div class="container px-4 px-lg-5">
                <p class="m-0 text-center text-white">Copyright &copy; instaBump 2021</p>
            </div>
        </footer>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="js/scripts.js"></script>
</body>

</html>