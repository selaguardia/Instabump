<!DOCTYPE html>
<html lang="en">
  <!-- Head partial -->
  <%- include('../partials/head/_head', { page: 'login' } ) %>

  <body>


    <section class="hero is-fullheight-with-navbar is-link has-background-primary-dark has-shadow">
      <div class="hero-body is-flex-direction-column">
        <h1 class="title">insta👊🏼 Login</h1>
        <form action="/login" method="POST" class="box">
          <div class="field">
            <label class="label">Email</label>
            <div class="control">
              <input
                name="email"
                class="input"
                type="email"
                placeholder="example@domain.com"
              />
            </div>
          </div>
          <div class="field">
            <label class="label">Password</label>
            <div class="control">
              <input
                name="password"
                class="input"
                type="password"
                placeholder="******"
              />
            </div>
          </div>
          <div class="field">
            <div class="control">
              <button class="button is-link is-fullwidth has-background-primary-dark has-shadow">Submit</button>
            </div>
          </div>
          <a href="/register">Need an account?</a>
        </form>
      </div>
    </section>
    <main class="container is-max-widescreen"></main>
  </body>
</html>